{
  "name": "@wasmsharp/monorepo",
  "private": true,
  "scripts": {
    "start": "pnpm --filter @wasmsharp/playground run start",
    "playground": "pnpm run start",
    "test": "pnpm --filter @wasmsharp/playground test",
    "e2e": "pnpm --filter @wasmsharp/playground test:e2e",
    "core": "pnpm --filter @wasmsharp/core run watch",
    "build:playground": "pnpm --filter @wasmsharp/playground run build",
    "publish:core": "cd ./packages/core && dotnet publish -c Release",
    "serve": "dotnet serve -d ./playground/dist -S -o",
    "bserve": "pnpm run build:playground && pnpm run serve",
    "all": "pnpm run publish:core && pnpm run build:playground && pnpm run serve:playground"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
